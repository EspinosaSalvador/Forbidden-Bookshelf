   <div class="container__all">
        <div class="box__back">
            <div class="box__back-login">
                <h3>Already have an account?</h3>
                <p>Sign in to access the page</p>
                <button id="btn__sign-in">Sign In</button>
            </div>
            <div class="box__back-register">
                <h3>Don't have an account yet?</h3>
                <p>Sign up to start reading</p>
                <button id="btn__sign-up">Sign Up</button>
            </div>
        </div>

        <!--Login and registration forms-->
        <div class="container__login-signup">
            <!--Login-->
            <form action="" class="form__login">
                <h2>Sign In</h2>
                <input type="text" placeholder="Email Address" id="signin-email-address">
                <input type="password" placeholder="Password" id="signin-password">
                <button id="loginbutton">Login</button>
            </form>

            <!--Register-->
            <form action="" class="form__signup">
                <h2>Sign Up</h2>
                <input type="text" placeholder="Email Address" id="email-signup">
                <input type="text" placeholder="Username" id="username-signup">
                <input type="password" placeholder="Password" id="password-signup">
                <button id="signupbutton">Sign Up</button>
            </form>
        </div>
    </div>

<script src="./js/login.js"></script>


